<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryShaded"
    tools:context=".GuestDatabaseRegistration.Activities.GuestDatabaseRegistrationActivity">


    <TextView
        android:id="@id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="2dp"
        android:textStyle="bold"
        android:text="@string/fragment_dbr_first_form_title"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/background_dialog"
        />

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="1dp"
        android:scrollbars="vertical"
        android:layout_below="@id/title_txt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_dialog"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:id="@+id/dietary_needs_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:minHeight="30dp"
                android:text="@string/dietary_needs"
                android:textSize="15sp">

            </TextView>


            <!-- TODO: Make a multi-select -->
            <!-- TODO: put back entries attribute -->
            <Spinner
                android:id="@+id/grf_3_dietary"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dietary_needs_textview"
                android:hint="@string/dietary_needs"
                android:entries="@array/dietary_needs"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />


            <Spinner
                android:id="@+id/grf_3_snap"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grf_3_dietary"
                android:layout_marginTop="-1dp"
                android:entries="@array/yes_no_select_one"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />


            <Spinner
                android:id="@+id/grf_3_otherProgs"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grf_3_snap"
                android:backgroundTint="@color/White"
                android:entries="@array/yes_no_select_one"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />


                <!-- TODO: Make a multi-select -->
            <Spinner
                android:id="@+id/grf_3_statusEmployment"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grf_3_otherProgs"
                android:backgroundTint="@color/White"
                android:entries="@array/employment_status"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />

            <!-- TODO: Make a multi-select -->
            <Spinner
                android:id="@+id/grf_3_statusHealth"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grf_3_statusEmployment"
                android:backgroundTint="@color/White"
                android:entries="@array/health_status"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />

            <!-- TODO: Make a multi-select -->
            <Spinner
                android:id="@+id/grf_3_statusHousing"
                style="?android:attr/spinnerDropDownItemStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grf_3_statusHealth"
                android:backgroundTint="@color/White"
                android:entries="@array/housing_status"
                android:paddingVertical="10dp"
                android:textColorHint="@color/White" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/grf_3_income_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/grf_3_statusHousing"
                android:hint="@string/household_income">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/grf_3_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:id="@+id/next_button_third_fragment_gRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_below="@id/grf_3_income_wrapper"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/next"
                    android:textColor="@color/White" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


