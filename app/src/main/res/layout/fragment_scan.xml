<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsUpc.ScanFragment">

    <me.dm7.barcodescanner.zxing.ZXingScannerView
        android:id="@+id/zxscan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/layout_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_scan_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_scan_fragment"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:text="..."
            android:id="@+id/txt_result"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_scan_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_complete"
        android:layout_above="@id/layout_result"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>