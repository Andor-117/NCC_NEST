<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NestNewUPC">

    <TextView
        android:id="@+id/nest_new_upc_adding_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="@string/nest_new_upc_adding_label"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nest_new_upc_brand_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nest_new_upc_adding_label"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/nest_new_upc_brand_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nest_new_upc_adding_label"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/brandEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints="@string/nest_new_upc_brand_hint"
        android:ems="10"
        android:hint="@string/nest_new_upc_brand_hint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nest_new_upc_brand_prompt"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/nest_new_upc_description_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nest_new_upc_adding_label"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/nest_new_upc_description_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/brandEdit"
        tools:ignore="RtlHardcoded" />

    <EditText
        android:id="@+id/descriptionEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:autofillHints="@string/nest_new_upc_description_hint"
        android:ems="10"
        android:hint="@string/nest_new_upc_description_hint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nest_new_upc_description_prompt"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/nest_new_upc_choose_corresponding_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nest_new_upc_adding_label"
        android:layout_marginTop="24dp"
        android:text="@string/nest_new_upc_choose_corresponding_label"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptionEdit"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/nest_new_upc_category_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nest_new_upc_adding_label"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/nest_new_upc_category_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nest_new_upc_choose_corresponding_label"
        tools:ignore="RtlHardcoded" />

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nest_new_upc_category_prompt"
        tools:ignore="RtlHardcoded" />


    <TextView
        android:id="@+id/nest_new_upc_product_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nest_new_upc_adding_label"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/nest_new_upc_product_prompt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categorySpinner"
        tools:ignore="RtlHardcoded" />

    <Spinner
        android:id="@+id/productSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nest_new_upc_product_prompt"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/accept"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:onClick="acceptClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cancelButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:onClick="cancelClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/acceptButton" />

</androidx.constraintlayout.widget.ConstraintLayout>