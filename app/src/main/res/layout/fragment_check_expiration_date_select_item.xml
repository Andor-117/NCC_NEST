<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BBBBBB"
    android:padding="2dp"
    tools:context=".CheckExpirationDate.Fragments.SelectItemFragment">

    <TextView
        android:id="@+id/select_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/fragment_ced_select_item_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/background_dialog"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/background_dialog">

            <TextView
                android:id="@+id/select_item_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/fragment_ced_select_item_message"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="24dp"
                android:backgroundTint="@android:color/darker_gray"
                android:foreground="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_dialog">

                <TextView
                    android:id="@+id/upc_lbl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/fragment_ced_confirm_item_upc_lbl"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/upc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="8dp"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="24dp"
                android:backgroundTint="@android:color/darker_gray"
                android:foreground="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/select_item_brand_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/fragment_ced_select_item_brand_lbl"/>

            <EditText
                android:id="@+id/select_item_brand_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints="@string/fragment_ced_select_item_brand_hint"
                android:hint="@string/fragment_ced_select_item_brand_hint"
                android:inputType="textPersonName"
                android:imeOptions="actionNext"/>

            <TextView
                android:id="@+id/select_item_description_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/fragment_ced_select_item_description_lbl"/>

            <EditText
                android:id="@+id/select_item_description_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:autofillHints="@string/fragment_ced_select_item_description_hint"
                android:hint="@string/fragment_ced_select_item_description_hint"
                android:inputType="textPersonName"
                android:imeOptions="actionDone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_item_category_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/fragment_ced_select_item_category_lbl"/>

                <TextView
                    android:id="@+id/select_item_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:text=""/>

            </LinearLayout>

            <Button
                android:id="@+id/select_item_category_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/fragment_ced_select_item_select_category_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_item_product_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/fragment_ced_select_item_product_lbl"/>

                <TextView
                    android:id="@+id/select_item_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:text=""/>

            </LinearLayout>

            <Button
                android:id="@+id/select_item_product_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="@string/fragment_ced_select_item_select_product_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/select_item_type_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="@string/fragment_ced_select_item_type_lbl"/>

                <TextView
                    android:id="@+id/select_item_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:text=""/>

            </LinearLayout>

            <Button
                android:id="@+id/select_item_type_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_ced_select_item_select_type_btn" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="23dp"
                android:backgroundTint="@android:color/darker_gray"
                android:foreground="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/select_item_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="1dp"
                    android:text="@string/cancel"
                    tools:ignore="ButtonStyle"/>

                <Button
                    android:id="@+id/select_item_accept_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginStart="1dp"
                    android:text="@string/accept"
                    android:textStyle="bold"
                    tools:ignore="ButtonStyle"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>