<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.ncc.nest.nestapp.FragmentsGuestVisit.GuestScanFragment" >

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/zxing_barcode_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/scan_result_textview"
        app:zxing_scanner_layout="@layout/custom_barcode_scanner" />

    <LinearLayout
        android:id="@+id/layout_scan_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rescan_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="@string/rescan_button" />

        <Button
            android:id="@+id/confirm_scan_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="@string/confirm_scan_button" />

    </LinearLayout>

    <TextView
        android:id="@+id/scan_result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_scan_buttons"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/scan_result_textview"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>