<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".FragmentsGuestVisit.GuestScanConfirmationFragment" >

    <TextView
        android:id="@+id/confirmation_1_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="4dp"
        android:shadowColor="@android:color/black"
        android:shadowRadius="2"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:text="@string/confirmation_welcome_nest_guest_lbl" />

    <TextView
        android:id="@+id/confirmation_1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingBottom="30dp"
        android:paddingTop="24dp"
        android:gravity="center"
        android:shadowColor="@android:color/black"
        android:shadowRadius="1"
        android:shadowDx="-2"
        android:shadowDy="2"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:text="@string/confirmation_guest_info_confirmation"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@android:drawable/dialog_frame" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@android:drawable/dialog_frame" >

        <TextView
            android:id="@+id/confirmation_1_guest_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="@string/confirmation_guest_name_lbl" />

        <TextView
            android:id="@+id/guest_name_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="" />

        <TextView
            android:id="@+id/confirmation_1_guest_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="@string/confirmation_guest_id" />

        <TextView
            android:id="@+id/guest_id_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rescan_code_button"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/rescan_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/name_confirmed"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/confirmation_confirm"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimaryDark"/>

    </LinearLayout>

</LinearLayout>