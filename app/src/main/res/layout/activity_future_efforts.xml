<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose"
    android:id="@+id/RelativeLayoutMain" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/nestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/make_choice"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/centerPoint"
        android:text=""
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_below="@id/nestTxt">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/addToInventoryBtn"
                android:layout_width="138dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="Add To Inventory" />

            <Button
                android:id="@+id/signUpBtn"
                android:layout_width="138dp"
                android:layout_height="70dp"
                android:onClick="onClick"
                android:text="Create NEST account"
                android:layout_below="@id/addToInventoryBtn"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/scheduleBtn"
                android:layout_width="138dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/signUpBtn"
                android:onClick="onClick"
                android:text="Schedule (Placeholder)" />

            <Button
                android:id="@+id/volunteerFormBtn"
                android:layout_width="138dp"
                android:layout_height="70dp"
                android:layout_below="@id/scheduleBtn"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="Volunteer Form" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>