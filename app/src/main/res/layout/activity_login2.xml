<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ececec"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:background="@drawable/circle_1_green"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="-50dp"
            android:rotation="90"
            android:layout_width="180dp"
            android:layout_height="match_parent">
        </LinearLayout>

        <LinearLayout
            android:rotation="210"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/circle_1_green"
            android:layout_width="180dp"
            android:layout_height="match_parent">

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <LinearLayout
            android:weightSum="0.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="320dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_1"
                    android:drawableLeft="@drawable/ic_mail"
                    android:drawablePadding="10dp"
                    android:hint="Email"
                    android:paddingLeft="15dp"
                    android:textAllCaps="false"
                    android:textColor="#E6000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/login_password"
                    android:inputType="textPassword"
                    android:textColor="#E6000000"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_password"
                    android:layout_marginTop="90dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/edittext_2"
                    android:hint="Password"
                    android:layout_width="320dp"
                    android:layout_height="70dp"/>
                <TextView
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="170dp"
                    android:text="@string/forgot_password"
                    android:textSize="15sp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#C9000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:weightSum="1.4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="#C9000000"
            android:textSize="55dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
