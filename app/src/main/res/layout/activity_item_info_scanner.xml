<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/UPC_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UPC_message" />

        <TextView
            android:id="@+id/item_name_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_name_message"
            android:layout_below="@id/UPC_message"/>

        <TextView
            android:id="@+id/final_date_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/final_date_message"
            android:layout_below="@id/item_name_message"/>

        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_label"
            android:layout_below="@id/final_date_message" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/category_label"
            android:layout_alignBaseline="@id/category_label"/>

        <TextView
            android:id="@+id/product_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_id_label"
            android:layout_below="@id/category_spinner"/>

        <EditText
            android:id="@+id/product_id_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_toEndOf="@id/product_id_label"
            android:layout_alignBaseline="@id/product_id_label"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitBtn_lbl"
            android:layout_below="@id/product_id_label"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>