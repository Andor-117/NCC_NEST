<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/UPC_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/UPC_label" />

        <EditText
            android:id="@+id/UPC_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_below="@id/UPC_label" />

        <Button
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_camera"
            android:layout_toRightOf="@id/UPC_entry"
            android:layout_alignBaseline="@id/UPC_entry"/>

        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_label"
            android:layout_below="@id/UPC_entry" />

        <Spinner
            android:id="@+id/category_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/category_label"
            android:layout_alignBaseline="@id/category_label"/>

        <TextView
            android:id="@+id/product_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_id_label"
            android:layout_below="@id/category_spinner"/>

        <EditText
            android:id="@+id/product_id_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:layout_toEndOf="@id/product_id_label"
            android:layout_alignBaseline="@id/product_id_label"/>

        <TextView
            android:id="@+id/exp_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_id_entry"
            android:text="@string/exp_date_label" />

        <Button
            android:id="@+id/datepicker_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_datepicker"
            android:layout_toEndOf="@id/exp_date_label"
            android:layout_alignBaseline="@id/exp_date_label"/>

        <TextView
            android:id="@+id/exp_date_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/exp_date_label"/>

        <Button
            android:id="@+id/calculate_pantry_life_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculate_pantry"
            android:layout_below="@id/exp_date_confirmation"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/pantry_life_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/calculate_pantry_life_button"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitBtn_lbl"
            android:layout_below="@id/pantry_life_confirmation"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


</RelativeLayout>