<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BBBBBB"
    android:padding="2dp"
    tools:context=".CheckExpirationDate.Fragments.StartFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Check Expiration Date"
        android:textSize="24sp"
        android:textStyle="bold"
        android:background="@drawable/background_dialog"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="1dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="36dp"
                android:paddingVertical="24dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Welcome to the 'Check Expiration Date' feature! This feature determines a food item's true expiration date."
                android:background="@drawable/background_dialog"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/background_dialog">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="@string/fragment_ced_start_message" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginVertical="24dp"
                    android:foreground="@android:color/darker_gray"/>

                <TextView
                    android:id="@+id/select_item_description_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="UPC Barcode Number:"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/upc_entry"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLength="12"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:hint="Enter UPC Barcode Number"
                        android:importantForAutofill="no" />

                    <ImageView
                        android:id="@+id/alert_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_check_mark"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/start_scan_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="1dp"
            android:text="@string/fragment_ced_start_scan_upc"
            tools:ignore="ButtonStyle"/>

        <Button
            android:id="@+id/start_enter_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="1dp"
            android:text="Enter"
            tools:ignore="ButtonStyle"/>

    </LinearLayout>

</LinearLayout>