<!-- THIS UI IS TEMPORARY -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsUpc.ConfirmItemFragment">


    <TextView
        android:id="@+id/textview_confirm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="@string/in_confirm_item_fragment" />

    <Button
        android:id="@+id/button_confirm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="316dp"
        android:text="Confirm Item"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button_incorrect_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="227dp"
        android:layout_marginTop="316dp"
        android:text="Incorrect"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="164dp"
        android:text="Item: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/catName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/itemName"
        android:layout_below="@+id/itemName"
        android:text="Category: "
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/itemUPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/itemName"
        android:layout_below="@+id/catName"
        android:text="UPC: "
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/add_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="164dp"
        android:text=""
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/add_cat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_item_name"
        android:layout_below="@+id/add_item_name"
        android:text=""
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/add_UPC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/add_cat_name"
        android:layout_below="@+id/add_cat_name"
        android:text=""
        android:textSize="14sp" />

</RelativeLayout>



