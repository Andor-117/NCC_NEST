<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryShaded"
    tools:context=".GuestDatabaseRegistration.Activities.GuestDatabaseRegistrationActivity">

    <TableRow
        android:id="@+id/Row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textAllCaps="true"
            android:text="@string/fragment_dbr_first_form_title"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/Row1a"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_dialog">
    </TableRow>

    <TableRow
        android:id="@+id/Row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row1"
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp" >

        <TextView
            android:id="@+id/enter_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your first name"
            android:textColor="@color/White"/>



        <!--        <EditText-->
<!--            android:id="@+id/guestreg_fname"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:backgroundTint="@color/White"-->
<!--            android:hint="@string/full_name"-->
<!--            android:inputType="textPersonName"-->
<!--            android:textColorHint="@color/White"-->
<!--            android:autofillHints="name" />-->

    </TableRow>

    <TableRow
        android:id="@+id/Row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row2"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <EditText
            android:id="@+id/guestreg_fname"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:backgroundTint="@color/White"
            android:hint="First Name"
            android:textColorHint="@color/White"
            android:autofillHints="phone" />

    </TableRow>

    <TableRow
        android:id="@+id/Row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row3"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/enter_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your last name"
            android:textColor="@color/White" />

    </TableRow>

    <TableRow
        android:id="@+id/Row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row4"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <EditText
            android:id="@+id/guestreg_lname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="Last Name"
            android:textColorHint="@color/White"
            />

    </TableRow>

    <TableRow
        android:id="@+id/Row6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row5"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp">

        <TextView
            android:id="@+id/enter_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your phone number"
            android:textColor="@color/White"
            />

    </TableRow>

    <TableRow
        android:id="@+id/Row7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row6"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <!-- TODO couldn't find city autofill. removing for now -->
        <EditText
            android:id="@+id/guestreg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textColorHint="@color/White"
            android:maxLength="10"
            />

    </TableRow>

    <TableRow
        android:id="@+id/Row8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row7"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"  >

        <TextView
            android:id="@+id/enter_your_ncc_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your NCC ID"
            android:textColor="@color/White" />



    </TableRow>

    <TableRow
        android:id="@+id/Row9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row8"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"  >

        <TextView
            android:id="@+id/N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N"
            android:textColor="@color/White"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/guestreg_nccid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="NCC ID"
            android:inputType="number"
            android:textColorHint="@color/White"
            android:autofillHints="4"
            android:maxLength="8"/>

    </TableRow>

    <TableRow
        android:id="@+id/Row10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row1a"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/next_button_first_fragment_gRegistration"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:backgroundTint="@color/colorPrimary"
            android:text="@string/next"
            android:textColor="@color/White" />

    </TableRow>

</RelativeLayout>


