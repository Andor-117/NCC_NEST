<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryShaded"
    tools:context=".GuestDatabaseRegistration.Activities.GuestDatabaseRegistrationActivity">

    <TableRow
        android:id="@+id/Row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:fontFamily="casual"
            android:textAllCaps="true"
            android:text="@string/fragment_dbr_first_form_title"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="20sp" />
    </TableRow>

    <TableRow
        android:id="@+id/Row1a"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_dialog">
    </TableRow>

    <TableRow
        android:id="@+id/Row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row1"
        android:layout_marginTop="35dp"
        android:layout_marginStart="30dp" >

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/full_name"
            android:inputType="textPersonName"
            android:textColorHint="@color/White"
            android:autofillHints="name" />

    </TableRow>

    <TableRow
        android:id="@+id/Row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row2"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:backgroundTint="@color/White"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColorHint="@color/White"
            android:autofillHints="phone" />

    </TableRow>

    <TableRow
        android:id="@+id/Row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row3"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp">

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/White"
            android:autofillHints="emailAddress" />

    </TableRow>

    <TableRow
        android:id="@+id/Row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row4"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/ncc_id"
            android:inputType="number"
            android:textColorHint="@color/White"
            />

    </TableRow>

    <TableRow
        android:id="@+id/Row6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row5"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp">

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/postal_address"
            android:inputType="textPostalAddress"
            android:textColorHint="@color/White"
            android:autofillHints="postalAddress" />

    </TableRow>

    <TableRow
        android:id="@+id/Row7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row6"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp" >

        <!-- TODO couldn't find city autofill. removing for now -->
        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/town_city"
            android:inputType="textPersonName"
            android:textColorHint="@color/White"
            />

    </TableRow>

    <TableRow
        android:id="@+id/Row8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row7"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"  >

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/zip_code"
            android:inputType="number"
            android:textColorHint="@color/White"
            android:autofillHints="postalCode" />

        <Spinner
            android:id="@+id/states_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:entries="@array/states_array"
            android:paddingTop="10dp"
            android:textColorHint="@color/White" />

    </TableRow>

    <TableRow
        android:id="@+id/Row9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row8"
        android:layout_marginTop="0dp"
        android:layout_marginStart="30dp"  >

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:hint="@string/birth_date"
            android:inputType="date"
            android:textColorHint="@color/White"
            android:autofillHints="4" />

    </TableRow>

    <TableRow
        android:id="@+id/Row10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Row1a"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/next_button_first_fragment_gRegistration"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:backgroundTint="@color/colorPrimary"
            android:text="@string/next"
            android:textColor="@color/White" />

    </TableRow>

</RelativeLayout>


