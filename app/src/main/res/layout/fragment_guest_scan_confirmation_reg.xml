<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingTop="5dp"
    android:orientation="vertical"
    android:background="@color/colorPrimaryShaded"
    tools:context=".FragmentsGuestVisit.GuestScanConfirmationFragment" >

    <TextView
        android:id="@+id/confirmation_1_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:shadowColor="@android:color/darker_gray"
        android:shadowRadius="1"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:fontFamily="casual"
        android:textColor="@android:color/white"
        android:text="@string/guestVisitConfirmation_nest_guest_not_found_lbl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="4dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:backgroundTint="@color/colorPrimary"
        android:background="@drawable/background_dialog" >

        <TextView
            android:id="@+id/confirmation_0_description_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:text="@string/guestVisitConfirmation_sorry_guest_not_found_lbl" />

        <TextView
            android:id="@+id/confirmation_0_guest_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="italic"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/confirmation_0_description_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:text="@string/guestVisitConfirmation_please_register_lbl" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="bottom" >

        <Button
            android:id="@+id/confirmation_0_rescan_btn"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:text="@string/guest_scan_rescan_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimary"/>

        <Button
            android:id="@+id/confirmation_0_register_btn"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="@string/guestVisitConfirmation_register_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:backgroundTint="@color/colorPrimary"/>

    </LinearLayout>

</LinearLayout>