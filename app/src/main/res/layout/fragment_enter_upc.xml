<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentsUpc.EnterUpcFragment">

    <TextView
        android:id="@+id/textview_enter_upc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/in_enter_upc_fragment"
        app:layout_constraintBottom_toTopOf="@id/button_enter_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_enter_upc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter UPC"
        app:layout_constraintTop_toBottomOf="@id/textview_enter_upc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_enter_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_enter_upc" />

</androidx.constraintlayout.widget.ConstraintLayout>