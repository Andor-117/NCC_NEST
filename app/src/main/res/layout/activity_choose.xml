<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose">
    
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/nestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:text="@string/make_choice"
        android:textColor="#FFFCFC"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scanBtn"
        android:onClick="onClick"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/nestTxt"
        android:layout_centerHorizontal="true"
        android:text="Scan" />

    <Button
        android:id="@+id/addToInventoryBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/scanBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Add To Inventory" />

    <Button
        android:id="@+id/inventoryBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/addToInventoryBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Inventory" />

    <Button
        android:id="@+id/scheduleBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inventoryBtn"
        android:onClick="onClick"
        android:text="Schedule" />

    <Button
        android:id="@+id/guestFormBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/scheduleBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Guest Form" />

    <Button
        android:id="@+id/volunteerFormBtn"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/guestFormBtn"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Volunteer Form" />

    <Button
        android:id="@+id/donateBtn"
        android:onClick="onClick"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_below="@id/volunteerFormBtn"
        android:layout_centerHorizontal="true"
        android:text="Donate" />

    <Button
        android:id="@+id/finalDBtn"
        android:onClick="onClick"
        android:layout_width="138dp"
        android:layout_height="71dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/donateBtn"
        android:text="@string/FinalDate"
        />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="14dp"
        android:onClick="onClick"
        android:text="Create NEST account" />

    <Button
        android:id="@+id/interfaceTestBtn"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interface Tests"
        android:layout_alignParentBottom="true"
        android:layout_alignBaseline="@id/signUpBtn"
        android:layout_toLeftOf="@id/signUpBtn"/>

    <Button
        android:id="@+id/enterUPCBtn"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/addToInventoryBtn"
        android:layout_toRightOf="@id/scanBtn"
        android:text="Enter UPC" />

</RelativeLayout>