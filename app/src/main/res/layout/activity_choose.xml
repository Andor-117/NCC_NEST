<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose"
    android:id="@+id/RelativeLayoutMain" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/nestTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/make_choice"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_below="@id/toolbar"/>

    <TextView
        android:id="@+id/centerPoint"
        android:text=""
        android:layout_width="10dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_below="@id/nestTxt">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/getUPCBtn"
                android:onClick="onClick"
                android:layout_width="138dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:text="Check Expiration Date" />


            <Button
                android:id="@+id/guestFormBtn"
                android:layout_width="138dp"
                android:layout_height="90dp"
                android:layout_below="@id/getUPCBtn"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="Guest Forms" />

            <Button
                android:id="@+id/futureEffortsBtn"
                android:layout_width="138dp"
                android:layout_height="90dp"
                android:layout_below="@id/guestFormBtn"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="Future Efforts" />

            <!--           Button for Testing-->
            <Button
                android:id="@+id/trueDate"
                android:layout_width="138dp"
                android:layout_height="90dp"
                android:layout_below="@id/futureEffortsBtn"
                android:layout_centerHorizontal="true"
                android:onClick="onClick"
                android:text="Display True Date" />



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>