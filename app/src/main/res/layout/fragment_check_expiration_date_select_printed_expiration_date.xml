<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckExpirationDate.Fragments.SelectPrintedExpirationDateFragment" >

    <LinearLayout
        android:id="@+id/date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/selected_print_headline"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_print_month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/fragment_ced_select_printed_expiration_date_month_lbl" />

            <Button
                android:id="@+id/selected_print_month_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_ced_select_printed_expiration_date_month_btn" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_print_day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/fragment_ced_select_printed_expiration_date_day_lbl" />

            <Button
                android:id="@+id/selected_print_day_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_ced_select_printed_expiration_date_day_btn" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_print_year_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="@string/fragment_ced_select_printed_expiration_date_year_lbl" />

            <Button
                android:id="@+id/selected_print_year_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_ced_select_printed_expiration_date_year_btn" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/selected_print_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/accept"
        tools:layout_editor_absoluteX="264dp"
        tools:layout_editor_absoluteY="179dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_layout"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/selected_print_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingBottom="16dp"
        android:text="@string/fragment_ced_select_printed_expiration_date_title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>