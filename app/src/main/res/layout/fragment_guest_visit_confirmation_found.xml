<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNCCPrimary"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:context=".GuestVisit.Fragments.ConfirmationFragment">

    <TextView
        android:id="@+id/confirmation_1_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-thin"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="-4"
        android:shadowDy="4"
        android:shadowRadius="1"
        android:text="@string/fragment_gv_confirmation_found_title"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/confirmation_1_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/background_dialog"
        android:backgroundTint="@color/colorNCCAccent"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp"
        android:text="@string/fragment_gv_confirmation_found_msg"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/background_dialog"
        android:backgroundTint="@color/colorNCCAccent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp">

        <TextView
            android:id="@+id/confirmation_1_guest_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_gv_confirmation_found_guest_name_lbl"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guest_name_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/confirmation_1_guest_id_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/fragment_gv_confirmation_found_guest_id_lbl"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/guest_id_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="italic" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="396dp"
        android:layout_height="392dp"
        android:background="@drawable/guest_found_icon" />

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorNCCPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rescan_code_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="1dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/colorNCCSecondary"
            android:text="@string/fragment_gv_confirmation_found_rescan_btn"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/name_confirmed"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="1dp"
            android:layout_weight="0.5"
            android:backgroundTint="@color/colorNCCSecondary"
            android:text="@string/confirm"
            android:textColor="@color/White" />

    </LinearLayout>

</LinearLayout>