<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BBBBBB"
    android:padding="2dp"
    tools:context=".CheckExpirationDate.Fragments.StatusFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginHorizontal="1dp"
        android:layout_marginTop="2dp"
        android:text="Item Status"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/background_dialog"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/background_dialog">

        <TextView
            android:id="@+id/status_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="This item does not expire for 30 days or more days." />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@android:color/darker_gray"
            android:foreground="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/status_icon"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:src="@drawable/ic_check_mark"
            android:contentDescription="TODO" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="24dp"
            android:backgroundTint="@android:color/darker_gray"
            android:foreground="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/true_exp_date_lbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_ced_display_true_expiration_true_expiration_date_lbl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/true_exp_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/storage_tips_lbl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/fragment_ced_display_true_expiration_storage_tips_lbl"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storage_tips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:text="" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="24dp"
            android:backgroundTint="@android:color/darker_gray"
            android:foreground="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="1dp"
                android:text="@string/back"
                tools:ignore="ButtonStyle"/>

            <Button
                android:id="@+id/more_info_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="1dp"
                android:text="@string/more_info"
                tools:ignore="ButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>