<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/guest_visit_nav_graph"
    app:startDestination="@id/GuestScanFragment" >

    <fragment
        android:id="@+id/GuestScanFragment"
        android:name="edu.ncc.nest.nestapp.FragmentsGuestVisit.GuestVisitScannerFragment"
        android:label="@string/guest_scan_fragment_label"
        tools:layout="@layout/fragment_scanner" >

        <action
            android:id="@+id/action_GuestScanFragment_to_GuestScanConfirmationFragment"
            app:destination="@id/GuestScanConfirmationFragment" />

    </fragment>

    <fragment
        android:id="@+id/GuestScanConfirmationFragment"
        android:name="edu.ncc.nest.nestapp.FragmentsGuestVisit.GuestVisitScanConfirmationFragment"
        android:label="@string/guest_scan_confirmation_fragment_lable"
        tools:layout="@layout/fragment_guest_visit_scan_confirmation_flipper">

        <action
            android:id="@+id/action_GuestScanConfirmationFragment_to_GuestQuestionnaireFragment"
            app:destination="@id/GuestQuestionnaireFragment"
            app:popUpTo="@id/GuestScanConfirmationFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_GuestScanConfirmationFragment_to_GuestScanFragment"
            app:destination="@id/GuestScanFragment"
            app:popUpTo="@id/GuestScanFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/GuestQuestionnaireFragment"
        android:name="edu.ncc.nest.nestapp.FragmentsGuestVisit.GuestVisitQuestionnaireFragment"
        android:label="@string/guest_questionnaire_fragment_label"
        tools:layout="@layout/fragment_guest_visit_questionnaire" >

    </fragment>

</navigation>